<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.checklist.CheckListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tmpBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tmpBack" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background='#EDF1E2'>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/testLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textColor="#2f651a"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:text="testtest" />

            <TextView
                android:id="@+id/testText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="16sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/testText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="16sp"
                android:text="@string/check_list_text1" />

            <TextView
                android:id="@+id/testLabelAtgarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="#2f651a"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:text="@string/check_list_label_atgardslista" />

            <TextView
                android:id="@+id/testText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="16sp"
                android:text="@string/check_list_text_3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkListActiveRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/testLabelEjAktuellaAtgarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#2f651a"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:text="@string/check_list_label_ej_aktuella_atgarder" />

            <TextView
                android:id="@+id/testText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="16sp"
                android:text="@string/check_list_text_4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>