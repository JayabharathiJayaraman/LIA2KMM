<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whatNext_images_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/newTestImage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/newTest_Image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="20dp"
            android:background="@drawable/round_background"/>
        <TextView
            android:id="@+id/newTest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="@color/darkGreen"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plantImage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/markstruktur_Image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_background"/>
        <TextView
            android:id="@+id/varda_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGreen"
            android:lines="2"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkImage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/check_Image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="20dp"
            android:background="@drawable/round_background"/>
        <TextView
            android:id="@+id/klar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/darkGreen"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>