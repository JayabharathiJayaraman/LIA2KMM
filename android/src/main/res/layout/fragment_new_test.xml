<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newtest.NewTestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goback_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="goBack" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background='#EDF1E2'>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/testbtn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:drawableStart="@drawable/shovel"
                    android:text="Button" />

                <LinearLayout
                    android:id="@+id/btn_container_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_container_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_container_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_the_tests_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2f651a"
                        android:textSize="16sp"
                        android:padding="20dp"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:text="@string/new_test_title" />

                    <TextView
                        android:id="@+id/about_the_tests_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2f651a"
                        android:textSize="16sp"
                        android:paddingHorizontal="20dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="@string/new_test_text" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>